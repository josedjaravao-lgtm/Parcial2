<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<BorderPane fx:id="mainDashboard" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.parcial2.DashboardController">

    <top>
        <HBox spacing="10.0" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button text="Capturar Inmueble (Formulario)" onAction="#showFormulario" />
            <Button text="Ver Listado (Eliminar)" onAction="#showListado" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label text="Bienvenido al Registro de Inmuebles" style="-fx-font-size: 20px;" />
            </children>
        </VBox>
    </center>
</BorderPane>